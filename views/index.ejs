<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <title>Messages Page</title>
</head>
<body>
<div class="p-5">
    <div class="container bg-light p-5">
        <h1><%-title%></h1>
        <a href="/new" class=" btn btn-link">New Message</a>
        <ul class="list-group">
            <% messages.forEach(message => { %> <li class="list-group-item d-flex justify-content-between"> <p><%-message.text %> - <small ><%-message.added%></small></p> <p class = 'text-primary'><%-message.user %>%></p> </li> <% }) %>
        </ul>

    </div>
</div>
</body>
</html>